<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFE"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.karsu.ballonsmenu.MainActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_header_title"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/language_chips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tr"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TR"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="#00796B"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_en"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EN"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="#00796B"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconTint="@android:color/white" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_de"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DE"
                    android:textColor="@android:color/white"
                    app:chipBackgroundColor="#00796B"
                    app:chipStrokeColor="@android:color/white"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconTint="@android:color/white" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/header_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.85"
            android:text="@string/app_header_desc"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="16dp" />

</LinearLayout>
